{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="text-center mb-4">Modifier mon profil</h2>
    <form action="{{ path('app_front_profile') }}" method="post" class="p-4 border rounded shadow-sm bg-light">
        <div class="row">
            <!-- Bloc 1 -->
            <div class="col-md-6">
                <h4 class="mb-3">Informations personnelles</h4>
                <div class="form-group mb-3">
                    <label for="gender" class="form-label">Genre :</label><br>
                    <input type="radio" id="male" name="gender" value="Male" {{ admin.gender|default('') == 'Male' ? 'checked' : '' }} />
                    <label for="male">Homme</label>
                    <input type="radio" id="female" name="gender" value="Female" {{ admin.gender|default('') == 'Female' ? 'checked' : '' }} />
                    <label for="female">Femme</label>
                </div>
                <div class="form-group mb-3">
                    <label for="firstname" class="form-label">Prénom :</label>
                    <input type="text" id="firstname" name="firstname" value="{{ admin.firstname|default('') }}" class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label for="lastname" class="form-label">Nom :</label>
                    <input type="text" id="lastname" name="lastname" value="{{ admin.lastname|default('') }}" class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label for="birthdate" class="form-label">Date de naissance :</label>
                    <div class="d-flex gap-2">
                        <select name="birth_month" class="form-select" required>
                            <option value="">Mois</option>
                            <option value="1" {{ admin.birth_month|default('') == 1 ? 'selected' : '' }}>Janvier</option>
                            <option value="2" {{ admin.birth_month|default('') == 2 ? 'selected' : '' }}>Février</option>
                            <!-- Ajouter les mois restants -->
                        </select>
                        <select name="birth_day" class="form-select" required>
                            <option value="">Jour</option>
                            {% for i in 1..31 %}
                            <option value="{{ i }}" {{ admin.birth_day|default('') == i ? 'selected' : '' }}>{{ i }}</option>
                            {% endfor %}
                        </select>
                        <select name="birth_year" class="form-select" required>
                            <option value="">Année</option>
                            {% for i in 1900..2024 %}
                            <option value="{{ i }}" {{ admin.birth_year|default('') == i ? 'selected' : '' }}>{{ i }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>

            <!-- Bloc 2 -->
            <div class="col-md-6">
                <h4 class="mb-3">Coordonnées et paramètres</h4>
                <div class="form-group mb-3">
                    <label for="email" class="form-label">Email :</label>
                    <input type="email" id="email" name="email" value="{{ admin.email|default('') }}" class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Mot de passe :</label>
                    <input type="password" id="password" name="password" class="form-control" />
                    <small class="text-muted">Laissez vide pour conserver votre mot de passe actuel.</small>
                </div>
                <div class="form-group mb-3">
                    <label for="country" class="form-label">Pays :</label>
                    <select id="country" name="country" class="form-select">
                        <option value="">Sélectionnez un pays</option>
                        <option value="France" {{ admin.country|default('') == 'France' ? 'selected' : '' }}>France</option>
                        <option value="USA" {{ admin.country|default('') == 'USA' ? 'selected' : '' }}>États-Unis</option>
                        <!-- Ajouter d'autres pays -->
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label for="zipcode" class="form-label">Code postal :</label>
                    <input type="text" id="zipcode" name="zipcode" value="{{ admin.zipcode|default('') }}" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label for="language" class="form-label">Langue :</label>
                    <select id="language" name="language" class="form-select">
                        <option value="fr" {{ admin.language|default('') == 'fr' ? 'selected' : '' }}>Français</option>
                        <option value="en" {{ admin.language|default('') == 'en' ? 'selected' : '' }}>Anglais</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Boutons -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <button type="reset" class="btn btn-secondary">Annuler</button>
        </div>
    </form>
</div>
{% endblock %}
