{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="container mt-12">
    <h2 class="text-center">Modifier mon profil</h2>
    <form action="{{ path('app_front_profile') }}" method="post" class="mx-auto mt-4 p-12 border rounded shadow-sm bg-light">
        <h4 class="mb-3">Mes informations personnelles</h4>
        <div class="form-group mb-3">
            <label for="gender" class="form-label">Genre :</label><br>
            <input type="radio" id="male" name="gender" value="Male" {{ admin.gender == 'Male' ? 'checked' : '' }} />
            <label for="male">Homme</label>
            <input type="radio" id="female" name="gender" value="Female" {{ admin.gender == 'Female' ? 'checked' : '' }} />
            <label for="female">Femme</label>
        </div>
        <div class="form-group mb-3">
            <label for="firstname" class="form-label">Prénom :</label>
            <input type="text" id="firstname" name="firstname" value="{{ admin.firstname }}" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="lastname" class="form-label">Nom :</label>
            <input type="text" id="lastname" name="lastname" value="{{ admin.lastname }}" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="birthdate" class="form-label">Date de naissance :</label>
            <div class="d-flex gap-2">
                <select name="birth_month" class="form-select" required>
                    <option value="">Mois</option>
                    <option value="1" {{ admin.birth_month == 1 ? 'selected' : '' }}>Janvier</option>
                    <option value="2" {{ admin.birth_month == 2 ? 'selected' : '' }}>Février</option>
                    <!-- Ajouter tous les mois ici -->
                </select>
                <select name="birth_day" class="form-select" required>
                    <option value="">Jour</option>
                    {% for i in 1..31 %}
                    <option value="{{ i }}" {{ admin.birth_day == i ? 'selected' : '' }}>{{ i }}</option>
                    {% endfor %}
                </select>
                <select name="birth_year" class="form-select" required>
                    <option value="">Année</option>
                    {% for i in 1900..2024 %}
                    <option value="{{ i }}" {{ admin.birth_year == i ? 'selected' : '' }}>{{ i }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="country" class="form-label">Pays :</label>
            <select id="country" name="country" class="form-select">
                <option value="">Sélectionnez un pays</option>
                <option value="France" {{ admin.country == 'France' ? 'selected' : '' }}>France</option>
                <option value="USA" {{ admin.country == 'USA' ? 'selected' : '' }}>États-Unis</option>
                <!-- Ajouter d'autres pays ici -->
            </select>
        </div>
        <div class="form-group mb-3">
            <label for="zipcode" class="form-label">Code postal :</label>
            <input type="text" id="zipcode" name="zipcode" value="{{ admin.zipcode }}" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label for="language" class="form-label">Langue :</label>
            <select id="language" name="language" class="form-select">
                <option value="fr" {{ admin.language == 'fr' ? 'selected' : '' }}>Français</option>
                <option value="en" {{ admin.language == 'en' ? 'selected' : '' }}>Anglais</option>
            </select>
        </div>

        <h4 class="mt-4 mb-3">Mon email et mot de passe</h4>
        <div class="form-group mb-3">
            <label for="email" class="form-label">Email :</label>
            <input type="email" id="email" name="email" value="{{ admin.email }}" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="password" class="form-label">Mot de passe :</label>
            <input type="password" id="password" name="password" class="form-control" />
            <small class="text-muted">Laissez vide pour ne pas modifier le mot de passe.</small>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary flex-grow-1">Enregistrer</button>
            <button type="reset" class="btn btn-secondary flex-grow-1">Annuler</button>
        </div>
    </form>
</div>
{% endblock %}
