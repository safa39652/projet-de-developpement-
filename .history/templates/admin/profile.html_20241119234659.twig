{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="text-center">Mon Profil</h2>
    <form action="{{ path('app_front_profile') }}" method="post" class="mx-auto w-50 mt-4 p-4 border rounded shadow-sm bg-light">
        <div class="form-group mb-3">
            <label for="name" class="form-label">Nom :</label>
            <input type="text" id="name" name="name" value="{{ admin.name }}" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="email" class="form-label">Email :</label>
            <input type="email" id="email" name="email" value="{{ admin.email }}" class="form-control" required />
        </div>
        <div class="form-group mb-4">
            <label for="password" class="form-label">Mot de passe :</label>
            <input type="password" id="password" name="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Mettre Ã  jour</button>
    </form>
</div>
{% endblock %}
