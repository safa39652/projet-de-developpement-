{% extends 'base.html.twig' %}

{% block title %}Rapports{% endblock %}

{% block body %}
    <h1>Générer un Rapport</h1>

    <!-- Formulaire pour choisir le type de rapport -->
    <form method="post" action="{{ path('rapport_choisir') }}">
        <label for="report_type">Choisissez le type de rapport :</label>
        <select name="report_type" id="report_type">
            <option value="presence">Rapport de Présence</option>
            <option value="event">Rapport des Événements</option>
        </select>

       

        <label for="start_date">Date de début :</label>
        <input type="date" name="start_date" id="start_date" required>

        <label for="end_date">Date de fin :</label>
        <input type="date" name="end_date" id="end_date" required>

        <button type="submit">Générer le rapport</button>
    </form>




    <ul style="list-style: none; padding: 0; margin: 0;">
    <li style="margin-bottom: 15px;">
        <a href="{{ path('rapport_presence') }}" style="text-decoration: none; display: flex; align-items: center; color: #333; font-size: 18px;">
            <img src="C:\Users\ASUS\Downloads\rapport logo.png" alt="Présence" style="width: 30px; height: 30px; margin-right: 10px;">
            Rapport de Présence de toutes les années
        </a>
    </li>
    <li>
        <a href="{{ path('rapport_evenements') }}" style="text-decoration: none; display: flex; align-items: center; color: #333; font-size: 18px;">
            <img src="C:\Users\ASUS\Downloads\rapport logo.png" alt="Événements" style="width: 30px; height: 30px; margin-right: 10px;">
            Rapport des Événements de toutes les années
        </a>
    </li>
</ul>

{% endblock %}
