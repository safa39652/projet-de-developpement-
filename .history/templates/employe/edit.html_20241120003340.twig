<form method="post" action="{{ path('employee_update', {'id': employee.id}) }}">
  <div class="mb-3">
    <label for="nom" class="form-label">Nom</label>
    <input type="text" id="nom" name="nom" value="{{ form.nom.vars.value }}" class="form-control">
  </div>
  <div class="mb-3">
    <label for="poste" class="form-label">Poste</label>
    <input type="text" id="poste" name="poste" value="{{ form.poste.vars.value }}" class="form-control">
  </div>
  <div class="mb-3">
    <label for="statut" class="form-label">Statut</label>
    <select id="statut" name="statut" class="form-select">
      <option value="actif" {% if form.statut.vars.value == 'actif' %}selected{% endif %}>Actif</option>
      <option value="inactif" {% if form.statut.vars.value == 'inactif' %}selected{% endif %}>Inactif</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>
