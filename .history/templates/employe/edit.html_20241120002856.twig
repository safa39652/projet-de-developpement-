{% extends 'base.html.twig' %}

{% block title %}Modifier un Employé{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center mb-4">Modifier un Employé</h2>
    <div class="card p-4 shadow-sm">
        {{ form_start(form) }}
        <div class="row">
            <!-- Colonne gauche -->
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.nom, 'Nom de l\'employé', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.poste, 'Poste', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.poste, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <!-- Colonne droite -->
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                </div>
            </div>
        </div>

        <!-- Bouton d'enregistrement -->
        <div class="text-center mt-4">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
