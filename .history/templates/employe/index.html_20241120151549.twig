{% extends 'base.html.twig' %}

{% block title %}Modifier un Employé{% endblock %}

{% block body %}
    <h1>Modifier les informations de l'employé</h1>

    <form method="post">
        {{ form_start(form) }}
        
        {{ form_row(form.nom) }}
        {{ form_row(form.poste) }}
        {{ form_row(form.statut) }}

        <button type="submit" class="btn btn-primary">Enregistrer</button>

        {{ form_end(form) }}
    </form>

    <a href="{{ path('employe_list') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}
